<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Route ke index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>

# Security
<FilesMatch "^\.env$">
    Require all denied
</FilesMatch>

# Block PHP di uploads
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/uploads/.*\.php$ [NC]
    RewriteRule .* - [F,L]
</IfModule>