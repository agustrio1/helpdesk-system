DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=helpdesk_db
DB_USER=root
DB_PASS=your_database_password_here
DB_CHARSET=utf8mb4
APP_NAME="Helpdesk System"
APP_URL=http://localhost/helpdesk
APP_ENV=development
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=public/uploads/
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,txt,zip

SESSION_LIFETIME=7200
CSRF_TOKEN_NAME=csrf_token

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=60

MAIL_MAILER=smtp

# --- Option 1: Using Your Hosting Email (Recommended) ---
# Get these details from your cPanel > Email Accounts > Configure Email Client
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=465
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password_here
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Port Options:
# - Port 465 with ssl (recommended for shared hosting)
# - Port 587 with tls (alternative if 465 is blocked)

# --- Option 2: Using Gmail (Alternative) ---
# Note: You need to enable "App Password" in Gmail settings
